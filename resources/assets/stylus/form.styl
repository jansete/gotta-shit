.forms
  padding 2em
  background form_background
.input
  border 1px solid form_input_border
  border-radius 5px
  height 2em
  padding .2em 1em
  width 90%
  margin-bottom .5em
.input-label
  display block
  font-size 1em
  font-weight bold
  padding .5em 0
.checkbox-margin-top
  margin-top .5em
.checkbox
  vertical-align middle
  width 2em
.checkbox-label
  font-weight bold
  margin-left .3em
.radio
  height 2em
  vertical-align middle
  width 4em
.radio-label
  font-weight bold

.actions
  position absolute
  right 1em
  display inline-block
.actions-card
  position static
  display block
.actions ul
  font-size 0
  margin 0
  padding 0
  text-align right
  background-color inherit
  li
    display inline-block
.button
  background-color button_background_color
  border 0
  border-radius .5em
  color button_color
  display block
  font-size 1rem
  font-weight normal
  margin 1.5em 1.5em .8em 0
  padding .8em 2em
  text-align center
  text-decoration none
.button:hover
  background-color button_color
  color button_background_color
.button-rate
  margin-left 2em
  font-size 1rem
  display inline-block
.button-card
  margin 0
  font-size 1rem
  margin-left 1px
  border-radius 0
  padding 5px 15px
.button-action
  margin .2em 0 .2em .5em
  font-size 1rem
  padding 5px 15px
.textarea
  width 100%
  height 100px
  padding .5em
.place-map
  position relative
.place-map-form-map
  width 90%
  height 300px
.place-map-form-city
  width 70%
  position absolute
  top 10px
  left 10px
  input
    padding 2px 10px
.place-map-form-error
  display none