.place
  padding 1em
  background-color place_background
.places
  text-align center
  background-color places_background
.place-card
//  background-color place_card_background
  color place_card_color
  margin 1em 1em 3em 1em
  width 15em
  display inline-block
  vertical-align top
  position relative
  h2
    margin 0
.place-title, .place-title-card
  background-color place_title_background
  border-radius .8em .8em 0 0
  color place_title_color
  padding .3em
  position relative
.place-title-link, .place-title-link-card
  color place_title_color
  text-decoration none
  display block
.place-title-card-hover
  background-color place_title_color
  color place_title_background
  border-color place_title_color
.place-map-render
  width 100%
  height 300px
.card-footer
  position relative
  font-size 0
  height 20px;
.place-stars
  position relative
  font-size 1rem
  vertical-align top
  text-align center
.card-stars
  position absolute
  width 80%
  font-size 1rem
  top 0
  left 0
.place-stars-background
  background-color place_stars_background
  width 100%
.place-stars-points
  background place_stars_points_background
  overflow hidden
.place-stars-text
  font-size 1rem
  font-weight bold
  color place_stars_text_color
  position absolute
  top 1em
  left 50%
.place-comments
  padding 1em
  background-color place_comments_background
.card-comments
  width 20%
  background-color place_card_comments_background
  font-size 1rem
  position absolute
  right 0
  top 0
  padding 0
.place-comments-number
  font-weight bold
.place-comments-user
  position relative
  background-color place_comments_user_background
  padding 1em
  margin 0
.place-comments-user-name
  display inline-block
.place-comments-body
  background-color place_comments_user_body
  padding 2em
  margin-top 0
  margin-bottom .5em